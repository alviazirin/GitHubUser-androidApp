<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="alviazirin.dicoding.githubuser">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    
    <permission android:name="alviazirin.dicoding.githubuser.READ_DATABASE" android:protectionLevel="normal"/>
    <permission android:name="alviazirin.dicoding.githubuser.WRITE_DATABASE" android:protectionLevel="normal"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GitHubUser">
        <provider
            android:name="alviazirin.dicoding.githubuser.provider.FavUserProvider"
            android:authorities="alviazirin.dicoding.githubuser"
            android:enabled="true"
            android:exported="true"
            android:readPermission="alviazirin.dicoding.githubuser.READ_DATABASE"
            android:writePermission="alviazirin.dicoding.githubuser.WRITE_DATABASE"
            />

        <receiver
            android:name="alviazirin.dicoding.githubuser.AlarmReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity android:name="alviazirin.dicoding.githubuser.SettingActivity" />
        <activity android:name="alviazirin.dicoding.githubuser.favorite.FavoriteActivity" />
        <activity
            android:name="alviazirin.dicoding.githubuser.detailuser.DetailUserActivity"
            android:label="@string/title_activity_detail_user"
            android:theme="@style/Theme.GitHubUser.NoActionBar" />
        <activity android:name="alviazirin.dicoding.githubuser.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>